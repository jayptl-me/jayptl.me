# Environment Configuration
# Copy this file to .env and configure for your deployment

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Deployment type: manual, github, netlify, vercel, rsync
DEPLOY_TYPE=manual

# ============================================
# CUSTOM SERVER DEPLOYMENT (rsync)
# ============================================

# Your server hostname or IP
# DEPLOY_SERVER=your-server.com

# SSH username
# DEPLOY_USER=your-username

# Path to web root on server
# DEPLOY_PATH=/var/www/html

# SSH port (optional, defaults to 22)
# DEPLOY_SSH_PORT=22

# ============================================
# PREVIEW SERVER
# ============================================

# Port for local preview server
PORT=8000

# ============================================
# OPTIMIZATION SETTINGS
# ============================================

# Enable/disable specific optimizations
OPTIMIZE_CSS=true
OPTIMIZE_JS=true
OPTIMIZE_HTML=true
OPTIMIZE_IMAGES=false

# ============================================
# BUILD CONFIGURATION
# ============================================

# Output directory
BUILD_DIR=dist

# Enable source maps (for debugging)
GENERATE_SOURCEMAPS=false

# ============================================
# ANALYTICS & MONITORING
# ============================================

# Google Analytics Measurement ID
# GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# NOTES
# ============================================

# This file should NOT be committed to version control
# Add .env to your .gitignore file
