{
  "name": "jayptl-portfolio",
  "version": "1.0.0",
  "description": "Jay Patel's professional portfolio website",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "bun run clean",
    "build": "bun scripts/build.js",
    "optimize": "bun scripts/optimize.js",
    "validate": "bun scripts/validate.js",
    "deploy:prepare": "bun run build && bun run optimize && bun run validate",
    "deploy:preview": "bun run deploy:prepare && bun scripts/preview.js",
    "deploy": "bun run deploy:prepare && bun scripts/deploy.js",
    "lighthouse": "bun scripts/lighthouse.js",
    "serve:dist": "node scripts/server.js",
    "dev": "bun run serve"
  },
  "devDependencies": {
    "terser": "^5.36.0",
    "cssnano": "^7.0.6",
    "postcss": "^8.4.49",
    "html-minifier-terser": "^7.2.0",
    "imagemin": "^9.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jayptl-me/jayptl.me.git"
  },
  "keywords": [
    "portfolio",
    "static-site",
    "html",
    "css",
    "javascript"
  ],
  "author": "Jay Patel",
  "license": "MIT"
}
